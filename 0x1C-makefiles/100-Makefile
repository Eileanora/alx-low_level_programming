CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${NAME}

${NAME}: ${OBJ} m.h
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	$(CC) ${CFLAGS} -c $< -o $@

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
